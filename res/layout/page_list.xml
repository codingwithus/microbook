                    android:gravity="center"
                    android:text="萌图馆" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/page_7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rootblock_block_orange_1"
                android:orientation="vertical" android:layout_weight="1" android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_7" android:layout_marginTop="10dp"/>

